@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="flex justify-center items-center min-h-screen bg-[#F5F5DC]">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold text-center text-[#C4A46B] mb-6">Đăng nhập</h2>

        <form action="/Account/Login" method="post" class="space-y-4">
            <!-- Email -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" required
                       class="mt-1 block w-full px-4 py-2 border rounded-md focus:ring-[#C4A46B] focus:border-[#C4A46B]">
            </div>

            <!-- Password -->
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                <input type="password" id="password" name="password" required
                       class="mt-1 block w-full px-4 py-2 border rounded-md focus:ring-[#C4A46B] focus:border-[#C4A46B]">
            </div>

            <!-- Remember me -->
            <div class="flex items-center">
                <input type="checkbox" id="remember" name="remember" class="h-4 w-4 text-[#C4A46B] border-gray-300 rounded">
                <label for="remember" class="ml-2 text-sm text-gray-600">Ghi nhớ tôi</label>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full bg-[#C4A46B] text-white py-2 rounded-md hover:bg-[#A89F98] transition">
                Đăng nhập
            </button>
        </form>

        <!-- Links -->
        <div class="text-center mt-4 text-sm text-gray-600">
            <a href="/Account/ForgotPassword" class="text-[#B8860B] hover:underline">Quên mật khẩu?</a>
        </div>
        <div class="text-center mt-2 text-sm text-gray-600">
            Chưa có tài khoản? <a href="/Account/Register" class="text-[#B8860B] hover:underline">Đăng ký</a>
        </div>
    </div>
</div>

<script>
    function toggleMenu() {
        var menu = document.getElementById("menu");
        menu.classList.toggle("hidden");
    }
    document.addEventListener("DOMContentLoaded", function () {
        const scrollContainer = document.querySelector(".scroll-content");
        let originalContent = scrollContainer.innerHTML;
        scrollContainer.innerHTML += originalContent;

        let scrollSpeed = 0.1;
        let scrollPosition = 0;

        function scrollLoop() {
            scrollPosition -= scrollSpeed;
            if (Math.abs(scrollPosition) >= scrollContainer.scrollWidth / 2) {
                scrollPosition = 0;
            }
            scrollContainer.style.transform = `translateX(${scrollPosition}px)`;
        }

        setInterval(scrollLoop, 30);
    });
    document.addEventListener("DOMContentLoaded", function () {
        const images = document.querySelectorAll(".hero-image-wrapper img");
        let index = 0;

        function changeImage() {
            images.forEach((img, i) => {
                img.classList.remove("active");
                if (i === index) img.classList.add("active");
            });

            index = (index + 1) % images.length;
        }

        let interval = setInterval(changeImage, 2000); // Tự động đổi ảnh sau 2s

        document.querySelector(".hero-image-wrapper").addEventListener("mouseenter", function () {
            changeImage();
        });

        document.querySelector(".hero-image-wrapper").addEventListener("mouseleave", function () {
            clearInterval(interval);
            interval = setInterval(changeImage, 3000);
        });
    });

</script>
